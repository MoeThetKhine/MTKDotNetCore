@model PyramidChartModel

<!DOCTYPE html>
<html>
<head>
    <title>Pyramid Chart</title>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
</head>
<body>
    <div id="chart"></div>

    <script>
        var options = {
            series: [{
                name: "Values",
                data: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Data))
            }],
            chart: {
                type: 'bar',
                height: 350,
                dropShadow: {
                    enabled: true,
                },
            },
            plotOptions: {
                bar: {
                    borderRadius: 0,
                    horizontal: true,
                    distributed: true,
                    barHeight: '80%',
                    isFunnel: true,
                },
            },
            colors: [
                '#F44F5E', '#E55A89', '#D863B1', '#CA6CD8',
                '#B57BED', '#8D95EB', '#62ACEA', '#4BC3E6',
            ],
            dataLabels: {
                enabled: true,
                formatter: function (val, opt) {
                    return opt.w.globals.labels[opt.dataPointIndex];
                },
                dropShadow: {
                    enabled: true,
                },
            },
            title: {
                text: 'Pyramid Chart',
                align: 'middle',
            },
            xaxis: {
                categories: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Categories))
            },
            legend: {
                show: false,
            },
        };

        var chart = new ApexCharts(document.querySelector("#chart"), options);
        chart.render();
    </script>
</body>
</html>
