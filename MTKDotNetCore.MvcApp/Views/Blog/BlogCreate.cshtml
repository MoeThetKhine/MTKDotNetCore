@{
    ViewData["Title"] = "Create Blog";
}

<form method="post" action="/Blog/Save">
    <div class="mb-3">
        <label for="txtTitle" class="form-label">Blog Title</label>
        <input type="text" class="form-control" id="txtTitle" name="txtTitle" required>
    </div>
    <div class="mb-3">
        <label for="txtAuthor" class="form-label">Blog Author</label>
        <input type="text" class="form-control" id="txtAuthor" name="txtAuthor" required>
    </div>
    <div class="mb-3">
        <label for="txtContent" class="form-label">Blog Content</label>
        <textarea class="form-control" id="txtContent" name="txtContent" required></textarea>
    </div>
    <button type="button" id="btnCancel" class="btn btn-secondary">Cancel</button>
    <button type="submit" id="btnSave" class="btn btn-success">Save</button>
</form>